;内核加载器的内存起始地址
LOADER_BASE_ADDR equ 0x900
;内核加载器栈空间
LOADER_STACK_TOP equ LOADER_BASE_ADDR
;内核加载器所在的扇区(LBR)
LOADER_START_SECTOR equ 0x2
;定义段描述符高32位,常用各字段值
DESC_BASE_HIGH1_ZERO equ 0x0
DESC_G_4K equ 1_00000000000000000000000b
DESC_DB_32 equ 1_0000000000000000000000b
DESC_L_32 equ 0_000000000000000000000b
DESC_AVL_ENABLE equ 1_00000000000000000000b
DESC_LIMIT_HIGH1_ZERO equ 0
DESC_LIMIT_HIGH1_ALL equ 1111_0000000000000000b
DESC_P_ENABLE equ 1_000000000000000b
DESC_DPL0 equ 0
DESC_DPL1 equ 01_0000000000000b
DESC_DPL2 equ 10_0000000000000b
DESC_DPL3 equ 11_0000000000000b
DESC_S_DATA equ 1_000000000000b
DESC_S_SYETM equ 0_000000000000b
DESC_TYPE_CODE_EXECUTION equ 1000_00000000b
DESC_TYPE_DATA_RW equ 0010_00000000b
DESC_BASE_LOW2_ZERO equ 0
;定义显存段描述,字段值
DESC_VIDEO_BASE_HIGH1 equ DESC_BASE_HIGH1_ZERO
DESC_VIDEO_LIMIT_HIGH1 equ DESC_LIMIT_HIGH1_ZERO
DESC_VIDEO_BASE_LOW2 equ 0000_1011b
;定义默认段描述符,高32位的部分
;代码段 可执行 4GB寻址
DESC_CODE_HIGH4 equ DESC_BASE_HIGH1_ZERO+DESC_G_4K+DESC_DB_32+DESC_L_32+DESC_AVL_ENABLE+DESC_LIMIT_HIGH1_ALL+DESC_P_ENABLE+DESC_DPL0+DESC_S_DATA+DESC_TYPE_CODE_EXECUTION+DESC_BASE_LOW2_ZERO
;数据段 可读可写 4GB寻址 
DESC_DATA_HIGH4 equ DESC_BASE_HIGH1_ZERO+DESC_G_4K+DESC_DB_32+DESC_L_32+DESC_AVL_ENABLE+DESC_LIMIT_HIGH1_ALL+DESC_P_ENABLE+DESC_DPL0+DESC_S_DATA+DESC_TYPE_DATA_RW+DESC_BASE_LOW2_ZERO
;显存段 0xB8000-0xBFFF 可读可写
DESC_VIDEO_HIGH4 equ DESC_VIDEO_BASE_HIGH1+DESC_G_4K+DESC_DB_32+DESC_L_32+DESC_AVL_ENABLE+DESC_VIDEO_LIMIT_HIGH1+DESC_P_ENABLE+DESC_DPL0+DESC_S_DATA+DESC_TYPE_DATA_RW+DESC_VIDEO_BASE_LOW2

;定义选择子字段值
RPL0 equ 00b
RPL1 equ 01b
RPL2 equ 10b
RPL3 equ 11b
TI_GDT equ 000b
TI_IDT equ 100b

;定义页目录表物理基址
PAGE_DIR_TABLE_POS equ 0x100000
;定义页目录项和页表项属性
PAGE_AVL_ENABLE equ 1_00000000000b
PAGE_US_U equ 1_00b
PAGE_US_S equ 0_00b
PAGE_RW_R equ 0_0b
PAGE_RW_RW equ 1_0b
PAGE_P equ 1b

;加载内核文件 物理基址
KERNEL_BIN_BASE_ADDR equ 0x70000
;内核程序入口点 虚拟地址
KERNEL_ENTRY_VIRTUAL_ADDR equ 0xc0001500
;KERNEL.bin在磁盘文件中的编号
KERNEL_START_SECTOR equ 9
;KERNEL.bin在磁盘文件中所占的大小
KERNEL_SECTOR_SIZE equ 200
;无效ELF文件
PT_NULL equ 0
;内核栈顶
LOADER_KERNEL_STACK_TOP equ 0xc009f000